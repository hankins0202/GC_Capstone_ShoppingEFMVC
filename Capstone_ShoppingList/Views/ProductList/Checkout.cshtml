@{
    ViewData["Title"] = "Cart";
}
@model CheckoutModel


<h1><u>Cart</u></h1>

<table>
    <tr>
        <th>
            Product
        </th>
        <th>
            Price
        </th>
    </tr>

    @foreach (var item in Model.Items)
    {
        <tr>

            <td style="width:120px">
                @Html.DisplayFor(modelItem => item.Product)
            </td>

            <td >
                @String.Format("Currency:{0:C}", item.Price)
            </td>

        </tr>
    }

</table>
<div>
    <label><b>Subtotal:</b></label>
    @String.Format("Currency:{0:C}", Model.Total)
</div>
<div>
    <label><b>Tax: 6%</b></label>
    @String.Format("Currency:{0:C}", Model.Tax)

</div>
<div>
    <label><b>Total:</b></label>
    @String.Format("Currency:{0:C}", Model.GrandTotal)
</div>
